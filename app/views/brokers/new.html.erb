<h2>ブローカーの追加</h2>

<h3>ブローカー情報</h3>
        
<%= form_for(@broker) do |f| %>
<% if @broker.image? %>

<%= image_tag @broker.image.url %>

<% end %><br>
<%= f.label :サムネイル %>
<%= f.file_field :image %>
<%= f.hidden_field :image_cache %>


<div class="col-3">
<%= f.label :ブローカー名 %>
<%= f.text_field :name, :class => 'effect-16' %>
<span class="focus-border"><i></i></span>
</div>

<div class="col-3 input-effect">
<%= f.label :ブローカー紹介文 %>
<%= f.text_area :b_pro, :class => 'effect-16' %>
<span class="focus-border"></span>
</div>

<div class="col-3 input-effect">
<%= f.label :所在地 %>
<%= f.text_field :location, :class => 'effect-16' %>
<span class="focus-border"></span>
</div>

<div class="col-3 input-effect">
<%= f.label :ライセンス取得地 %>
<%= f.text_field :license, :class => 'effect-16' %>
<span class="focus-border"></span>
</div>

<div class="col-3 input-effect">
<%= f.label :事業開始日 %>
<%= f.text_field :state, :class => 'effect-16' %>
<span class="focus-border"></span>
</div>

<div class="col-3 input-effect">
<%= f.label :資本金 %>
