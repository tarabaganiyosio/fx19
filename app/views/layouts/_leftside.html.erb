<div class="sidebar left-side">
    <span>
        <% if user_signed_in? %>
            <h2><%= link_to current_user.username , current_user %> さん</h2>
            <% if current_user.image? %>
                <%= image_tag current_user.image, {:class => "user_icon_s"} %>
            <% else %>
                <%= image_tag("user_noimage.png", :class => "user_icon_s") %>
            <% end %>
        <% else %>
            <h2><%= link_to "ログイン", new_user_session_path %></h2>
        <% end %>
    </span>
    
    <span>
        <h2>ランキング</h2>
        
    </span>
</div>