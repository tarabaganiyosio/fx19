<h2>BA数によるユーザーランキング</h2>

<table>
  <thead>
    <tr>
      <th>BAされたユーザー</th>
      <th>内容</th>
      <th>質問板ID</th>
      <th>bas_count</th>
    </tr>
  </thead>

  <tbody>
    <% @bas.each do |ba| %>
      <tr>
        <td><p><%= ba.username %></p></td>
        <td><p><%= ba.body %></p></td>
        <td><%= ba.question_id %></td>
        <td><%= ba.bas_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

